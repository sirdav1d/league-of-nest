// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  name      String
  nickname  String     @unique
  imageUrl  String
  email     String     @unique
  password  String
  role      String
  champions Champion[]
}

model Champion {
  id          String   @id @default(uuid())
  name        String   @unique
  duty        Duty     @relation(fields: [dutyId], references: [id])
  dutyId      String
  description String
  difficulty  String
  imageUrl    String
  skills      String[]
  users       User[]
}

model Duty {
  id          String     @id @default(uuid())
  name        String     @unique
  description String
  champions   Champion[]
}
